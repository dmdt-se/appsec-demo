@page
@model AppSecDotnetDemo.Pages.UploadModel
@{
    ViewData["Title"] = "Upload Assembly";
}

<h1>Upload Assembly</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="AssemblyName" class="form-label">Assembly Name (optional)</label>
                <input type="text" class="form-control" id="AssemblyName" name="AssemblyName"
                       placeholder="Display name for the assembly">
            </div>
            <div class="mb-3">
                <label for="AssemblyFile" class="form-label">Select DLL File</label>
                <input type="file" class="form-control" id="AssemblyFile" name="AssemblyFile"
                       accept=".dll" required>
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
            <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
        </form>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert @(Model.IsError ? "alert-danger" : "alert-success") mt-3">
                @Model.Message
            </div>
        }
    </div>
</div>
